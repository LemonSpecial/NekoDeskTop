<Window x:Class="NekoDeskTop.UI.Explorer"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:NekoDeskTop.UI"
        mc:Ignorable="d"
        Title="Explorer" Height="450" Width="800" AllowsTransparency="True" >
    <Border BorderBrush="#FF9C9C9C" BorderThickness="1">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <DockPanel LastChildFill="True" Grid.Column="2">
                <!-- Label 停靠在左侧 -->
                <Label Content="资源管理器" 
           FontSize="15" 
           VerticalAlignment="Center"
           DockPanel.Dock="Left"/>

                <!-- 按钮停靠在右侧 -->
                <StackPanel Orientation="Horizontal" 
                HorizontalAlignment="Right"
                DockPanel.Dock="Right">
                    <Button Style="{StaticResource {x:Static ToolBar.ButtonStyleKey}}" 
                Width="45" Height="30" Content="─" 
                Click="MinimizeButton_Click"/>
                    <Button Style="{StaticResource {x:Static ToolBar.ButtonStyleKey}}" 
                Width="45" Height="30" Content="□" 
                Click="MaximizeButton_Click"/>
                    <Button Style="{StaticResource {x:Static ToolBar.ButtonStyleKey}}" 
                Width="45" Height="30" Content="✕" 
                Click="CloseButton_Click" />
                </StackPanel>

                <!-- 中间空白区域（可拖动窗口） -->
                <Border Background="Transparent" MouseLeftButtonDown="DragWindow"/>
            </DockPanel>

            <Border Grid.Row="1" Height="32">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>
                    <!-- 后退/前进按钮 -->
                    <StackPanel Grid.Column="0" Orientation="Horizontal" VerticalAlignment="Center" Margin="5,0">
                        <Button Style="{StaticResource {x:Static ToolBar.ButtonStyleKey}}" Width="30" Height="30">
                            <Image Source="/Resources/forward.png" Width="16" Height="16"/>
                        </Button>
                        <Button Style="{StaticResource {x:Static ToolBar.ButtonStyleKey}}" Width="30" Height="30">
                            <Image Source="/Resources/back.png" Width="16" Height="16"/>
                        </Button>
                    </StackPanel>
                    <!-- 地址栏 -->
                    <TextBox Grid.Column="1" Margin="5,5,5,5" VerticalContentAlignment="Center" 
                         Text="此电脑" FontSize="12" BorderThickness="1" BorderBrush="#FFCCCCCC"/>
                    <!-- 刷新按钮 -->
                    <Button Grid.Column="2" Style="{StaticResource {x:Static ToolBar.ButtonStyleKey}}" 
                        Height="30" Margin="5,0">
                        <Image Source="/Resources/refresh.png" Width="16" Height="16"/>
                    </Button>
                    <!--搜索栏-->
                    <StackPanel Grid.Column="3" Orientation="Horizontal" Margin="5,0">
                        <TextBox Margin="5,5,5,5" VerticalContentAlignment="Center" Width="150"
                            Text="搜索" FontSize="12" BorderThickness="1" BorderBrush="#FFCCCCCC" Background="White"/>
                        <Button Style="{StaticResource {x:Static ToolBar.ButtonStyleKey}}" 
                                Height="30">
                            <Image Source="/Resources/search.png" Width="15" Height="16"/>
                        </Button>
                    </StackPanel>


                </Grid>
            </Border>

            <Border Grid.Row="2" />
            <Border Grid.Row="3" Height="16"/>
        </Grid>
    </Border>
</Window>
