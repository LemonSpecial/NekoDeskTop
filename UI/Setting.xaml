<Window x:Class="NekoDeskTop.UI.Setting"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:NekoDeskTop.UI"
        mc:Ignorable="d"
        Title="Setting" Height="450" Width="800">
    <Border BorderBrush="#FF9C9C9C" BorderThickness="1">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <DockPanel LastChildFill="True" Grid.Column="2">
                <Label Content="Setting" 
       FontSize="15" 
       VerticalAlignment="Center"
       DockPanel.Dock="Left"/>

                <StackPanel Orientation="Horizontal" 
            HorizontalAlignment="Right"
            DockPanel.Dock="Right">
                    <Button Style="{StaticResource {x:Static ToolBar.ButtonStyleKey}}" 
            Width="45" Height="30" Content="─" 
            Click="MinimizeButton_Click"/>
                    <Button Style="{StaticResource {x:Static ToolBar.ButtonStyleKey}}" 
            Width="45" Height="30" Content="□" 
            Click="MaximizeButton_Click"/>
                    <Button Style="{StaticResource {x:Static ToolBar.ButtonStyleKey}}" 
            Width="45" Height="30" Content="✕" 
            Click="CloseButton_Click" />
                </StackPanel>

                <Border Background="Transparent" MouseLeftButtonDown="DragWindow"/>
            </DockPanel>

        </Grid>
    </Border>
</Window>
