<Window x:Class="NekoDeskTop.UI.Setting"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:NekoDeskTop.UI"
        mc:Ignorable="d"
        Title="Setting" Height="450" Width="800" AllowsTransparency="True" >
    <Border BorderBrush="#FF9C9C9C" BorderThickness="1">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <DockPanel Grid.Row="0">
                <Label Content="Settings" 
                       FontSize="15" 
                       VerticalAlignment="Center"
                       DockPanel.Dock="Left"
                       Margin="10,0"/>

                <StackPanel Orientation="Horizontal" 
                            HorizontalAlignment="Right"
                            DockPanel.Dock="Right">
                    <Button Style="{StaticResource {x:Static ToolBar.ButtonStyleKey}}" 
                            Width="45" Height="30" Content="─" 
                            Click="MinimizeButton_Click"/>
                    <Button Style="{StaticResource {x:Static ToolBar.ButtonStyleKey}}" 
                            Width="45" Height="30" Content="□" 
                            Click="MaximizeButton_Click"/>
                    <Button Style="{StaticResource {x:Static ToolBar.ButtonStyleKey}}" 
                            Width="45" Height="30" Content="✕" 
                            Click="CloseButton_Click" />
                </StackPanel>

                <Border Background="Transparent" MouseLeftButtonDown="DragWindow"/>
            </DockPanel>

            <Grid Grid.Row="1">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="2*"/>
                    <ColumnDefinition Width="8*"/>
                </Grid.ColumnDefinitions>

                <!-- 左侧导航列表 -->
                <Border Grid.Column="0" BorderBrush="#FFCCCCCC" BorderThickness="0,0,1,0">
                    <ListView x:Name="SettingsMenu" 
                              Background="Transparent"
                              BorderThickness="0"
                              SelectionChanged="SettingsMenu_SelectionChanged">
                        <ListView.ItemContainerStyle>
                            <Style TargetType="ListViewItem">
                                <Setter Property="Padding" Value="10"/>
                                <Setter Property="Background" Value="Transparent"/>
                                <Setter Property="Template">
                                    <Setter.Value>
                                        <ControlTemplate TargetType="ListViewItem">
                                            <Border Background="{TemplateBinding Background}">
                                                <ContentPresenter/>
                                            </Border>
                                        </ControlTemplate>
                                    </Setter.Value>
                                </Setter>
                            </Style>
                        </ListView.ItemContainerStyle>

                        <ListViewItem>
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="General" Margin="20,5,0,5"/>
                            </StackPanel>
                        </ListViewItem>
                        <ListViewItem>
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="Display" Margin="20,5,0,5"/>
                            </StackPanel>
                        </ListViewItem>
                        <ListViewItem>
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="Plugins" Margin="20,5,0,5"/>
                            </StackPanel>
                        </ListViewItem>
                        <ListViewItem>
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="About" Margin="20,5,0,5"/>
                            </StackPanel>
                        </ListViewItem>
                    </ListView>
                </Border>

                <Border Grid.Column="1">
                    <Frame x:Name="ContentFrame" NavigationUIVisibility="Hidden"/>
                </Border>
            </Grid>
        </Grid>
    </Border>
</Window>